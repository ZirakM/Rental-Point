<div class="row">

  <div class="medium-7 large-6 columns">
    <h1>For All Your Car Rental Needs - Rental Point</h1>
    <p class="subheader">Find the perfect car to conquer any occasion. From laid
      back city driving to exploring the great outdoors. We have a car to fit
      any need!</p>
    <button class="button"><a class="menu-text" href="/about">About Us</a></button>
    <button class="button"><a class="menu-text" href="/register">Join Now</a></button>
  </div>

  <div class="medium-5 large-3 columns">
    <div class="callout secondary">
      <form action="/search" method="POST">
        <div class="row">
          <div class="small-12 columns">
            <p>Quick Search:</p>
            <label>Location
              <input
                type="text"
                name="locationSearch"
                placeholder="Search location"
                required
              />
            </label>
          </div>
          <div class="small-12 columns">
            <label>Number of Seats
              <input
                type="number"
                name="seatSearch"
                placeholder="Seats required"
                required
              />
            </label>
            <button type="submit" class="button">Search Now!</button>
          </div>
        </div>
      </form>
    </div>
  </div>

</div>

<div class="row column">
  <hr />
</div>

<div class="row column">
  <p class="lead"><b>Recently Added Listings</b></p>
</div>

<div class="row small-up-1 medium-up-2 large-up-3">
  {{#each results}}
    <div class="column">
      <div class="callout">
        <p>{{manufacturer}} {{model}} {{car_year}}</p>
        {{#if picture}}
          <p><img src="/images/{{picture}}" height="250" width="400" /></p>
        {{else}}
          <p><img
              class="height:unset"
              src="https://unsplash.it/250/200/?image=1081"
              height="250"
              width="400"
            /></p>
        {{/if}}
        <p class="lead">
          {{fname}}
          {{lname}},
          {{location}}</p>
        <p class="subheader">
          Key Info: Seats:
          {{seats}}
          Condition:
          {{state}}/10
        </p>
      </div>
    </div>
  {{/each}}
</div>