<div class="callout large">
  <div class="row column text-center">
    <h1>My Account - Rental Point</h1>
    <p class="lead">Welcome back,
      {{accountDetails.fname}}
      {{accountDetails.lname}}</p>
  </div>
</div>

<ul class="tabs" data-active-collapse="true" data-tabs id="collapsing-tabs">
  <li class="tabs-title is-active"><a
      href="#panel1c"
      aria-selected="true"
    >Account Details</a></li>
  <li class="tabs-title"><a href="#panel2c">Change Account Details</a></li>
  <li class="tabs-title"><a href="#panel3c">Orders</a></li>
  {{#if registeredSeller}}  
  <li class="tabs-title"><a href="#panel4c">Manage Listings</a></li>
  <li class="tabs-title"><a href="#panel5c">Fulfilled Orders</a></li>
  {{/if}}
  
</ul>
{{!-- First Panel --}}
<div class="tabs-content" data-tabs-content="collapsing-tabs">
  <div class="tabs-panel is-active" id="panel1c">
    <div class="travel-feature-card">
  <div class="travel-feature-card-header{{#if type}} icon {{type}}-icon{{/if}}">
    <div class="row">
       <div class="medium-12 columns">
         <h5 class="travel-feature-card-subtitle">Your details</h5>
      </div>
    </div>  
  </div>


  <div class="travel-feature-card-details">
    <div class="row">
      <div class="small-12 medium-9 columns travel-feature-card-content">
        <div class="row">
          <div class="small-8 medium-10 columns">
            <h6 class="travel-feature-card-title"></h6>
            <p><b>Account Name: </b>{{accountDetails.fname}} {{accountDetails.lname}}</p>
            <p><b>Email: </b>{{accountDetails.email}}</p>
            <p><b>Location: </b>{{accountDetails.country}}</p>
            <p><b>Birthdate: </b>{{accountDetails.birthdate}} </p>
            <p><b>Registered Seller Status: </b>{{#if registeredSeller}} Yes {{else}} No {{/if}}</p>
          </div>
        </div> 
      </div>

      <div class="small-12 medium-3 columns travel-feature-card-price">
          {{!-- <button type="button" class="alert button"><i class="fas fa-minus"></i> Delete Account</button> --}}
      </div>
    </div> 
  </div>
</div>
  </div>
{{!-- Second Panel --}}
  <div class="tabs-panel" id="panel2c">
    <div class="travel-feature-card">
  <div class="travel-feature-card-header{{#if type}} icon {{type}}-icon{{/if}}">
    <div class="row">
       <div class="medium-12 columns">
         <h5 class="travel-feature-card-subtitle">Change Your Details</h5>
      </div>
    </div>  
  </div>
  <div class="travel-feature-card-details">
    <div class="row">
      <div class="small-12 medium-9 columns travel-feature-card-content">
        <div class="row">
          <div class="small-8 medium-10 columns">
            <h6 class="travel-feature-card-title"></h6>
            <div class="callout primary">
              <p>** It is important to keep your location as accurate as possible to view listings relevant to you. Anytime you're expriencing a move, feel free to change your location! **</p>
          </div>
            
            <form action="/account" method="POST" id="changeForm">
            <label>Location
              <select name="changeLocation">
                <option value="None">None</option>
                <option value="Canada">Canada</option>
                <option value="United States">United States</option>
                <option value="Mexico">Mexico</option>
                <option value="United Kingdom">United Kingdom</option>
                <option value="India">India</option>
                <option value="China">China</option>
              </select>
            </label>
            </form>
          </div>
        </div> 
      </div>
      <div class="small-12 medium-3 columns travel-feature-card-price">
          <button type="submit" form="changeForm" class="success button"><i class="fas fa-save"></i> Save Changes</button>
      </div>
    </div> 
  </div>
  </div>
  </div>


{{!-- Third Panel --}}
  <div class="tabs-panel" id="panel3c">


  {{#if orders}}
  {{#each orders}}
    <div class="travel-feature-card">
  <div class="travel-feature-card-header{{#if type}} icon {{type}}-icon{{/if}}">
    <div class="row">
       <div class="medium-12 columns">
         <h5 class="travel-feature-card-subtitle">Order #{{order_id}}</h5>
      </div>
    </div>  
  </div>

  <div class="travel-feature-card-details">
    <h6 class="travel-feature-card-date-range">Order Date: {{datecreated}}</h6>
    <div class="row">
      <div class="small-12 medium-9 columns travel-feature-card-content">
        <div class="row">
           <div class="small-4 medium-2 columns">
            {{#if picture}}
            <img class="travel-feature-card-image" src="/images/{{picture}}" alt="">
            {{else}}
            <img class="travel-feature-card-image" src="https://unsplash.it/600/600/?image=1081" alt="">
            {{/if}}
          </div>
          <div class="small-8 medium-10 columns">
            <h6 class="travel-feature-card-title">{{manufacturer}} {{model}} {{car_year}}</h6>
            <p>Host: {{fname}} {{lname}} <br>
            Host Email: {{email}}<br>
            Location: {{location}}<br>
            Order Duration: {{pickup}} - {{dropoff}}</p>
          </div>
        </div> 
      </div>

      <div class="small-12 medium-3 columns travel-feature-card-price">
        <h6>Total: ${{total}}</h6>
        <p class="travel-feature-card-price-subtext">${{price}} / Day</p>
      </div>
    </div> 
  </div>
</div>
{{/each}}
{{else}}
  <div class="travel-feature-card">
  <div class="travel-feature-card-header{{#if type}} icon {{type}}-icon{{/if}}">
    <div class="row">
       <div class="medium-12 columns">
         <h5 class="travel-feature-card-subtitle">Your orders</h5>
      </div>
    </div>  
  </div>
  <div class="travel-feature-card-details">
    <div class="row">
      <div class="small-12 medium-9 columns travel-feature-card-content">
        <div class="row">
          <div class="small-8 medium-10 columns">
            <h6 class="travel-feature-card-title">You've not made any orders. </h6>
            <p>Be sure to check back later when you make an order.</p>
          </div>
        </div> 
      </div>

      <div class="small-12 medium-3 columns travel-feature-card-price">
      </div>
    </div> 
  </div>
</div>
{{/if}}
  </div>
  
  <div class="tabs-panel" id="panel4c">
  {{#if listings}}
  {{#each listings}}
    <div class="travel-feature-card">
  <div class="travel-feature-card-header{{#if type}} icon {{type}}-icon{{/if}}">
    <div class="row">
       <div class="medium-12 columns">
         <h5 class="travel-feature-card-subtitle">Listing #{{listing_id}}</h5>
      </div>
    </div>  
  </div>

  <div class="travel-feature-card-details">
    <h6 class="travel-feature-card-date-range">Date Posted: {{datecreated}}</h6>
    <div class="row">
      <div class="small-12 medium-9 columns travel-feature-card-content">
        <div class="row">
           <div class="small-4 medium-2 columns">
            {{#if picture}}
            <img class="travel-feature-card-image" src="/images/{{picture}}" alt="">
            {{else}}
            <img class="travel-feature-card-image" src="https://unsplash.it/600/600/?image=1081" alt="">
            {{/if}}
          </div>
          <div class="small-8 medium-10 columns">
            <h6 class="travel-feature-card-title">{{manufacturer}} {{model}} {{car_year}}</h6>
            <p>Avaliability: {{start}} - {{end}} <br>
            Condition: {{state}} / 10<br>
            Price / Day: ${{price}}<br>
            Location: {{location}}</p>
          </div>
        </div> 
      </div>

      <div class="small-12 medium-3 columns travel-feature-card-price">
        <button name={{listing_id}} type="button" class="alert button"><a style="color: inherit" href="/account/{{listing_id}}"><i class="fas fa-minus"></i> Delete Listing</a></button>
      </div>
    </div> 
  </div>
</div>
{{/each}}
{{else}}
  <div class="travel-feature-card">
  <div class="travel-feature-card-header{{#if type}} icon {{type}}-icon{{/if}}">
    <div class="row">
       <div class="medium-12 columns">
         <h5 class="travel-feature-card-subtitle">Your Listings</h5>
      </div>
    </div>  
  </div>
  <div class="travel-feature-card-details">
    <div class="row">
      <div class="small-12 medium-9 columns travel-feature-card-content">
        <div class="row">
          <div class="small-8 medium-10 columns">
            <h6 class="travel-feature-card-title">You've not created any listings. </h6>
            <p>Be sure to check back later when you make an order.</p>
          </div>
        </div> 
      </div>

      <div class="small-12 medium-3 columns travel-feature-card-price">
        
      </div>
    </div> 
  </div>
</div>
{{/if}}
  </div>
    <div class="tabs-panel" id="panel5c">
      {{#if fulfilled}}
  {{#each fulfilled}}
    <div class="travel-feature-card">
  <div class="travel-feature-card-header{{#if type}} icon {{type}}-icon{{/if}}">
    <div class="row">
       <div class="medium-12 columns">
         <h5 class="travel-feature-card-subtitle">Order #{{order_id}}</h5>
      </div>
    </div>  
  </div>

  <div class="travel-feature-card-details">
    <h6 class="travel-feature-card-date-range">Order Timeline: {{pickup}} - {{dropoff}}</h6>
    <div class="row">
      <div class="small-12 medium-9 columns travel-feature-card-content">
        <div class="row">
          <div class="small-8 medium-10 columns">
            <h6 class="travel-feature-card-title">{{manufacturer}} {{model}} {{car_year}}</h6>
            <p>Purchase Date: {{purchaseDate}} <br>
            Renter: {{fname}} {{lname}} <br>
            Renter Email: {{email}} <br>
            Vehicle Condition: {{state}}/10<br>
            Location: {{location}}</p>
          </div>
        </div> 
      </div>

      <div class="small-12 medium-3 columns travel-feature-card-price">
        <h6>Order Total: ${{price}}</h6>

      </div>
    </div> 
  </div>
</div>
{{/each}}
{{else}}
  <div class="travel-feature-card">
  <div class="travel-feature-card-header{{#if type}} icon {{type}}-icon{{/if}}">
    <div class="row">
       <div class="medium-12 columns">
         <h5 class="travel-feature-card-subtitle">Your Fulfilled Orders</h5>
      </div>
    </div>  
  </div>
  <div class="travel-feature-card-details">
    <div class="row">
      <div class="small-12 medium-9 columns travel-feature-card-content">
        <div class="row">
          <div class="small-8 medium-10 columns">
            <h6 class="travel-feature-card-title">You've have no fulfilled orders, as soon as somone makes an order on a listing it will be updated here.</p>
          </div>
        </div> 
      </div>

      <div class="small-12 medium-3 columns travel-feature-card-price">
      </div>
    </div> 
  </div>
</div>
{{/if}}
    </div>
</div>